html
  head
    meta(charset='utf-8')
    title Clinica Veterinária - Página Inicial
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.8.1/css/all.css', integrity='sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf', crossorigin='anonymous')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    link(rel='stylesheet', type='text/css', media='screen', href='/styles/main.css')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')
    script(src='/scripts/data.js')
    script(src='/scripts/createObj.js')
    script(src='/scripts/consultas.js')
    script(src='/scripts/backoffice.js')
  body
    #wrapper.d-flex
      #sidebar-wrapper.hMenu.border-right
        .sidebar-heading.hMenu(style='text-align:center')
          img(src='images/logo.png', width='95rem')
        .list-group.list-group-flush.vMenu
          a.list-group-item.list-group-item-action.bg-light(href='/')
            i.fas.fa-home
            |  Home
          a.list-group-item.list-group-item-action.bg-light.active(href='/gerirConsultas')
            i.fas.fa-address-book
            |  Marcação de consultas
          a.list-group-item.list-group-item-action.bg-light(href='/medicos/gerir')
            i.fas.fa-users
            |  Gerir Médicos
          a.list-group-item.list-group-item-action.bg-light(href='/creditos')
            i.fas.fa-info-circle
            |  Créditos
      // /#sidebar-wrapper
      // Page Content
      #page-content-wrapper
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
          button#menu-toggle.btn.btn-light
            i.navbar-toggler-icon
          h4.navbar.navbar-expand Clinica Veterinária - Página Inicial
          #navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ml-auto.mt-3.mt-lg-0
              li.nav-item
                #nowTime
        .container-fluid
          #calendar
          // Modal
          #exampleModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
            .modal-dialog(role='document')
              .modal-content
                .modal-header
                  h5#exampleModalLabel.modal-title Editar
                  button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span(aria-hidden='true') ×
                #modal-body.modal-body
                .modal-footer
                  button#saveButton.btn.btn-info(type='button', data-dismiss='modal') Guardar
                  button#paymentButton.btn.btn-danger(type='button', disabled='true') Pagamento
          h3(style='padding:5px') Consultas do dia:
          a.btn.btn-outline-dark(style='margin-left:5px', href='/consultas')
            i.fas.fa-notes-medical
            |   Adicionar Consultas
          a.btn.btn-outline-dark(style='margin-left:5px', href='#', onclick='switchConsultas(this)')
            i.fa.fa-clipboard-list
            |   Mostrar todas as consultas
          hr
          #todayConsultation.col-11(style='overflow-x:auto;')
    script.
      $("#menu-toggle").click(function (e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
      });
    script(src='scripts/main.js')
